{
    "filterProducts": {
      "schema": {
        "title": "Filter Products",
        "type": "object",
        "required": ["cardType", "cardCategory", "quantity","completionTime"],
        "properties": {
          "cardType": {
            "type": "string",
            "title": "Loại thẻ",
            "enum": ["Thẻ từ", "Thẻ thường"]
          },
          "cardCategory": {
            "type": "string",
            "title": "Danh mục thẻ",
            "enum": ["Thẻ thẻ bệnh viện", "Thẻ giữ xe", "Thẻ ngân hàng", "Thẻ Game", "Danh thiếp"]
  
          },
          "quantity": {
            "type": "integer",
            "title": "Số lượng trên",
            "enum": [0,100,200,300,400,500,700,800,900,1000]
          },
          "completionTime": {
            "type": "integer",
            "title": "Thời gian hoàng thành",
            "enum": [10,20,30,40,50]
          }
        }
      },
      "uiSchema": {
        "cardType": {
        "ui:placeholder": "Chọn loại thẻ"
        },
        "cardCategory": {
          "ui:placeholder": "Chọn danh mục thẻ"
        },
        "quantity": {
          "ui:placeholder": "Số lượng mong muốn trên"
        },
        "completionTime": {
          "ui:placeholder": "Thời gian hoàng thành"
        },
        "ui:options": {
          "submitButtonOptions": {
            "props": {
              "disabled": false,
              "className": "btn btn-info"
            },
            "norender": false,
            "submitText": "Lọc sản phẩm"
          }
        }
      }
    },
    "register": {
      "schema": {
        "title": "Register",
        "type": "object",
        "required": ["email", "password", "confirmPassword"],
        "properties": {
          "email": { "type": "string", "title": "Email", "format": "email" },
          "password": { "type": "string", "title": "Password", "minLength": 6 },
          "confirmPassword": { "type": "string", "title": "Confirm Password", "minLength": 6 }
        }
      },
      "uiSchema": {
        "password": {
          "ui:widget": "password",
          "ui:placeholder": "Mật khẩu"
        },
        "email": {
          "ui:placeholder": "Email"
        },
        "confirmPassword": {
          "ui:widget": "password",
          "ui:placeholder": "Xác nhận mật khẩu"
        },
        "ui:options": {
          "submitButtonOptions": {
            "props": {
              "disabled": false,
              "className": "btn btn-info"
            },
            "norender": false,
            "submitText": "Đăng ký"
          }
        }
      }
    },
    "login":{
    "schema": {
        "title": "Register",
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": { "type": "string", "title": "Email" },
          "password": { "type": "string", "title": "Password", "minLength": 6 }
        }
    },
    "uiSchema": {
        "password": {
          "ui:widget": "password",
          "ui:placeholder": "Mật khẩu"
        },
        "email": {
          "ui:placeholder": "Email"
        },
        "confirmPassword": {
          "ui:widget": "password",
          "ui:placeholder": "Xác nhận mật khẩu"
        },
        "ui:options": {
          "submitButtonOptions": {
            "props": {
              "disabled": false,
              "className": "btn btn-info"
            },
            "norender": false,
            "submitText": "Đăng nhập"
          }
        }
      }
  }
}